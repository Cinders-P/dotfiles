# Windows clipboard to WSL clipboard bridge
imgclip() {
    command -v powershell.exe >/dev/null 2>&1 || { echo "powershell.exe not found - not in WSL"; return 1; }
    command -v xclip >/dev/null 2>&1 || { echo "xclip not installed"; return 1; }

    # Kill any existing xclip processes serving clipboard images
    pkill -f "xclip.*image/png" 2>/dev/null

    # Try to get image from Windows clipboard
    powershell.exe -command "Add-Type -AssemblyName System.Windows.Forms; Add-Type -AssemblyName System.Drawing; if ([System.Windows.Forms.Clipboard]::ContainsImage()) { try { \$img = [System.Windows.Forms.Clipboard]::GetImage(); \$img.Save('/tmp/clipboard.png', [System.Drawing.Imaging.ImageFormat]::Png); exit 0 } catch { exit 1 } } else { exit 1 }" 2>/dev/null

    if [ -f /tmp/clipboard.png ]; then
        # Start xclip in background to serve the clipboard
        # The loop keeps it alive and serving clipboard requests
        (nohup xclip -selection clipboard -t image/png -i /tmp/clipboard.png -loops 0 > /dev/null 2>&1 &)
        echo "✓ Image synced to Linux clipboard (ready for paste)"
        return 0
    else
        # Try text instead
        TEXT=$(powershell.exe -command "Get-Clipboard" 2>/dev/null | sed 's/\r$//')
        if [ -n "$TEXT" ]; then
            echo "$TEXT" | xclip -selection clipboard
            echo "✓ Text synced to Linux clipboard"
            return 0
        else
            echo "✗ No clipboard content found in Windows clipboard"
            return 1
        fi
    fi
}

# Enable colors for ls
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi


